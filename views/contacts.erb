<% @contacts.each_with_index do |contact, index| %>
	<article class="contact-details<%= index == @contacts.count - 1 ? " contact-details-last" : "" %>">
		<header>
			<a href="/contacts/<%= contact.id %>" title="<%= contact.first_name %> <%= contact.last_name %>"><%= contact.first_name %> <%= contact.last_name %></a> (<a href="<%= contact.email %>" title="<%= contact.first_name %> <%= contact.last_name %>'s email"><%= contact.email %></a>)
		</header>
		<div class="contact-note">
			<%= contact.note %>
		</div>
	</article>
	<div class="<%= index % 3 == 2 ? "clear" : "hidden" %>"></div>
<% end %>
<div class="clear"></div>